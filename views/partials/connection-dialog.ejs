<div id="connection-dialog" class="dialog">
  <div class="dialog-content">
    <h3>新建SSH连接</h3>
    <form id="connection-form">
      <div class="form-group">
        <label for="conn-name">名称</label>
        <input type="text" id="conn-name" placeholder="我的服务器" required>
      </div>
      <div class="form-group">
        <label for="conn-host">主机</label>
        <input type="text" id="conn-host" placeholder="example.com 或 192.168.1.1" required>
      </div>
      <div class="form-group">
        <label for="conn-port">端口</label>
        <input type="number" id="conn-port" value="22" min="1" max="65535">
      </div>
      <div class="form-group">
        <label for="conn-username">用户名</label>
        <input type="text" id="conn-username" placeholder="root" required>
      </div>

      <div class="form-group">
        <label for="auth-type">认证方式</label>
        <select id="auth-type">
          <option value="password">密码</option>
          <option value="privateKey">私钥</option>
        </select>
      </div>

      <div class="form-group auth-password">
        <label for="conn-password">密码</label>
        <input type="password" id="conn-password">
      </div>

      <div class="form-group auth-key hidden">
        <label for="conn-private-key">私钥文件</label>
        <div class="file-input-group">
          <input type="text" id="conn-private-key-path" readonly>
          <button type="button" id="browse-private-key">浏览</button>
        </div>
      </div>

      <div class="form-group auth-key hidden">
        <label for="conn-passphrase">私钥密码 (可选)</label>
        <input type="password" id="conn-passphrase">
      </div>

      <div class="form-group">
        <div class="checkbox-container">
          <input type="checkbox" id="conn-save-password" checked>
          <label for="conn-save-password">保存密码</label>
        </div>
      </div>

      <div class="dialog-buttons">
        <button type="button" id="cancel-connection">取消</button>
        <button type="submit">连接</button>
      </div>
    </form>
  </div>
</div>

<!-- 加载遮罩 HTML 结构 -->
<div id="loading-overlay" class="loading-overlay hidden">
  <div class="spinner"></div>
  <div class="loading-text">连接中...</div>
</div>
